{
  "name": "@pantheon-systems/pcc-react-sample-library",
  "author": "@pantheon-systems",
  "description": "Pantheon Content Publisher Sample Component Library for React",
  "version": "5.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "dist/css/*.css",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -f -u 1 node_modules/@pantheon-systems/pds-toolkit-react/**/*.css src/**/*.css dist/css/",
    "dev": "pnpm run build --watch",
    "build": "pnpm run clean && tsup && pnpm run copy-files",
    "lint": "eslint . && prettier --check . && tsc --noEmit",
    "lint:fix": "eslint . --fix && prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^20.19.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-pcc-custom": "workspace:*",
    "eslint-plugin-storybook": "^0.6.15",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "^5.0.10",
    "storybook": "^8.6.14",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@types/react": ">=19",
    "@types/react-dom": ">=19",
    "react": ">=19",
    "react-dom": ">=19"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "dependencies": {
    "@pantheon-systems/pcc-react-sdk": "workspace:*",
    "@pantheon-systems/pcc-sdk-core": "workspace:*",
    "@pantheon-systems/pds-toolkit-react": "1.0.0-dev.55"
  },
  "sideEffects": false
}
